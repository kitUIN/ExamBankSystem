<Page
    x:Class="ExamBankSystem.Views.TestPaperCheckView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:ExamBankSystem.Extensions"
    xmlns:local="using:ExamBankSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="20">
            <Button x:Name="SelectWordA" Content="{ex:Locale Key=SelectWord}" />
            <TextBlock x:Name="WordA" Text="" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            Spacing="20">
            <Button x:Name="SelectWordB" Content="{ex:Locale Key=SelectWord}" />
            <TextBlock x:Name="WordB" Text="" />
        </StackPanel>
        <Button x:Name="CheckButton" />
    </Grid>
</Page>
